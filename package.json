{
    "name": "angular-hoisting-formatter",
    "displayName": "Angular Hoisting Formatter",
    "description": "Reorders methods and variables in Angular components to avoid references before declarations.",
    "version": "0.1.5",
    "publisher": "DaniloAgostinho",
    "scripts": {
        "compile": "tsc"
    },
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.reorderHoisting"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.reorderHoisting",
                "title": "Reorder Methods and Variables (Hoisting)"
            }
        ]
    },
    "dependencies": {
        "typescript": "^5.0.0"
    },
    "devDependencies": {
        "@types/node": "^22.10.7",
        "@types/vscode": "^1.78.0",
        "prettier": "^3.4.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/daniloagostinho/angular-hoisting-formatter-extension"
    },
    "author": "Danilo Agostino",
    "icon": "assets/images/logo.png"
}
